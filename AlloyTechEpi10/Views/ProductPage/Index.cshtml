@using AlloyTechEpi10.Helpers
@model ProductPage

@{ Layout = "~/Views/Shared/Layouts/_TwoPlusOne.cshtml"; }

<h1 @Html.EditAttributes(x => x.PageName)>@Model.PageName</h1>
<p class="introduction" @Html.EditAttributes(x => x.MetaDescription)>@Model.MetaDescription</p>
<div class="row">
    <div class="span8 clearfix" @Html.EditAttributes(x => x.MainBody)>
        @Html.DisplayFor(m => m.MainBody)
    </div>
</div>
@Html.PropertyFor(x => x.MainContentArea, new { CssClass = "row", Tag = Global.ContentAreaTags.TwoThirdsWidth })

@section RelatedContent
{
    <div @Html.EditAttributes(x => x.PageImage)>
        <img src="@Url.ContentUrl(Model.PageImage)"/>
    </div>

    <div class="block colorBox @string.Join(" ", @Model.GetThemeCssClassNames())">
        <h2 @Html.EditAttributes(x => x.PageName)>@Model.PageName</h2>
        @Html.PropertyFor(x => x.UniqueSellingPoints)
    </div>

    @Html.PropertyFor(x => x.RelatedContentArea, new { CssClass = "row", Tag = Global.ContentAreaTags.OneThirdWidth })
}
