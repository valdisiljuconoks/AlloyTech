<div class="row">
    <div class="span12 footer">
        <hr />
        <div class="row">
            <div class="span3">
                <h3>@Html.Translate("/footer/products")</h3>
                @Html.PropertyFor(x => PageLayout.ProductPages)
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/company")</h3>
                @Html.PropertyFor(x => PageLayout.CompanyInformationPages)
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/news")</h3>
                @Html.PropertyFor(x => PageLayout.NewsPages)
            </div>
            <div class="span3">
                <h3>@Html.Translate("/footer/customerzone")</h3>
                @Html.PropertyFor(x => PageLayout.CustomerZonePages)
                <ul>
                    <li>
                        @if(PageLayout.LoggedIn)
                        {
                            @Html.ActionLink(Html.Translate("/footer/logout"), "Logout", new { language = CurrentPage.Language.Name })
                        }
                        else
                        {
                            if (!PageLayout.IsInReadonlyMode)
                            {
                            <a href="@PageLayout.LoginUrl" title="@Html.Translate("/footer/login")">@Html.Translate("/footer/login")</a>
                            }
                        }
                    </li>
                </ul>

            </div>
        </div>
    </div>
</div>
